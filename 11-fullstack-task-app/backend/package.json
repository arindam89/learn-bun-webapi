{
  "name": "taskflow-backend",
  "version": "1.0.0",
  "description": "TaskFlow backend API built with Bun 1.3",
  "main": "dist/server.js",
  "type": "module",
  "scripts": {
    "dev": "bun --watch src/server.ts",
    "start": "bun run dist/server.js",
    "build": "bun build src/server.ts --outdir dist --target bun --minify",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "lint": "bun run lint:check",
    "lint:check": "bunx eslint src/**/*.ts",
    "lint:fix": "bunx eslint src/**/*.ts --fix",
    "migrate": "bun run scripts/migrate.ts",
    "migrate:rollback": "bun run scripts/migrate-rollback.ts",
    "seed": "bun run scripts/seed.ts",
    "db:reset": "bun run scripts/db-reset.ts",
    "type-check": "bunx tsc --noEmit",
    "clean": "rm -rf dist uploads/*.tmp",
    "docker:build": "docker build -t taskflow-backend .",
    "docker:run": "docker run -p 3001:3001 taskflow-backend"
  },
  "dependencies": {
    "zod": "^3.22.4",
    "jsonwebtoken": "^9.0.2",
    "bcrypt": "^5.1.1",
    "multer": "^1.4.5-lts.1",
    "sharp": "^0.32.6",
    "nodemailer": "^6.9.7",
    "helmet": "^7.1.0",
    "cors": "^2.8.5",
    "compression": "^1.7.4",
    "express-rate-limit": "^7.1.5",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/jsonwebtoken": "^9.0.5",
    "@types/bcrypt": "^5.0.2",
    "@types/multer": "^1.4.11",
    "@types/nodemailer": "^6.4.14",
    "@types/cors": "^2.8.17",
    "@types/compression": "^1.7.5",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "eslint": "^8.54.0",
    "typescript": "^5.3.2"
  },
  "engines": {
    "bun": ">=1.3.0",
    "node": ">=18.0.0"
  },
  "catalog": {
    "versions": {
      "zod": "^3.22.4",
      "jsonwebtoken": "^9.0.2",
      "bcrypt": "^5.1.1",
      "helmet": "^7.1.0",
      "cors": "^2.8.5",
      "typescript": "^5.3.2"
    }
  },
  "keywords": [
    "bun",
    "typescript",
    "api",
    "backend",
    "taskflow",
    "fullstack",
    "postgresql",
    "redis"
  ],
  "author": "TaskFlow Team",
  "license": "MIT"
}