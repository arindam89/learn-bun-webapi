{
  "name": "taskflow-frontend",
  "version": "1.0.0",
  "description": "TaskFlow frontend built with Bun and React",
  "type": "module",
  "scripts": {
    "dev": "bun --hot src/app.tsx",
    "build": "bun build src/app.tsx --outdir ./dist --target browser --minify --splitting",
    "preview": "bun serve ./dist --port 3000",
    "start": "bun run preview",
    "type-check": "bunx tsc --noEmit",
    "lint": "bunx eslint src/**/*.{ts,tsx}",
    "lint:fix": "bunx eslint src/**/*.{ts,tsx} --fix",
    "test": "bun test",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.20.1",
    "zustand": "^4.4.7",
    "axios": "^1.6.2",
    "react-hook-form": "^7.48.2",
    "react-query": "^3.39.3",
    "date-fns": "^2.30.0",
    "react-hot-toast": "^2.4.1",
    "lucide-react": "^0.294.0",
    "clsx": "^2.0.0",
    "react-dropzone": "^14.2.3"
  },
  "devDependencies": {
    "@types/react": "^18.2.42",
    "@types/react-dom": "^18.2.17",
    "@types/react-router-dom": "^5.3.3",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "eslint": "^8.54.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "typescript": "^5.3.2",
    "tailwindcss": "^3.3.6",
    "autoprefixer": "^10.4.16",
    "postcss": "^8.4.32"
  },
  "catalog": {
    "versions": {
      "react": "^18.2.0",
      "react-dom": "^18.2.0",
      "react-router-dom": "^6.20.1",
      "zustand": "^4.4.7",
      "axios": "^1.6.2",
      "typescript": "^5.3.2",
      "tailwindcss": "^3.3.6"
    }
  },
  "engines": {
    "bun": ">=1.3.0",
    "node": ">=18.0.0"
  },
  "keywords": [
    "bun",
    "react",
    "typescript",
    "frontend",
    "taskflow",
    "fullstack",
    "vite"
  ],
  "author": "TaskFlow Team",
  "license": "MIT"
}